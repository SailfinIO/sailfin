// examples/advanced/type-guards.sfn

struct User {
    name: string;
    age: number;
}

fn processString(input: string) -> void {
    print.info("It's a string: {{input}}");
}

fn processNumber(input: number) -> void {
    print.info("It's a number: {{input}}");
}

fn main() -> void {
    processString("Sail");
    processNumber(42);

    let user: User = new User { name: "Bob", age: 20 };
    
    // Pattern matching on struct fields
    if user.age >= 18 {
        print.info("Adult user: {{user.name}}");
    } else {
        print.info("Minor user: {{user.name}}");
    }
}
