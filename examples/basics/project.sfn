// examples/basics/project.sfn

import { build, test, run } from "sailfin/build";

name: "my_project"
version: "1.0.0"
description: "A Sailfin project for demonstrating project.sfn structure."

dependencies: {
    sailfin: "^2.0.0",
    utils: "^1.2.3",
}

devDependencies: {
    sail_test: "^1.0.0",
    mock_lib: "^0.5.0",
}

build {
    entry: "src/main.sfn",
    output: "dist/",
    optimize: true,
}

test {
    directories: ["tests/", "examples/"],
    coverage: true,
}

scripts: {
    build: "sfn build",
    test: "sfn test",
    start: "sfn run",
    clean: "sfn clean",
}

run {
    script: "src/main.sfn",
    args: ["--production"],
}