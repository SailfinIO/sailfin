// examples/concurrency/producer-consumer.sfn

let buffer: Channel<number> = Channel<number>(10); // Bounded buffer with capacity 10

// Producer routine
routine {
    for i in 1..7 {
        print.info("Producing {{i}}");
        buffer.send(i);
        sleep(500);
    }
}

// Consumer routine
routine {
    for _ in 1..7 {
        let item: number = await buffer.receive();
        print.info("Consumed {{item}}");
        sleep(1000);
    }
}
