// examples/web/http-server.sfn

import { serve } from "sailfin/net";

fn handleRequest(req: Request, res: Response) -> void {
    if req.path == "/" {
        res.send("Welcome to Sail!");
    } else {
        res.send("404 Not Found", 404);
    }
}

fn main() -> void {
    serve(handleRequest, { port: 8080 });
}
